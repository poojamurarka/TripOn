<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <title>Contact Form</title>
    <script src="http://s.codepen.io/assets/libs/modernizr.js" type="text/javascript"></script>


    <link rel="stylesheet" href="/css/contact.css">
<style>
    #contentinfo {
        color: #000;
    }
</style>




</head>

<body>
<div id='browser'>
    <div id='browser-bar'>
        <a href="/home">Go Back</a>
        <p>Contact Us</p>
        <span class='arrow entypo-resize-full'></span>
    </div>
    <div id='content'>
        <div id='left'>
            <div id='map'>
                <p>Where To Find Us</p>
                <div class='map-locator'>
                    <div class='tooltip'>
                        <ul>
                            <li>
                                <span class='entypo-location'></span>
                                <span class='selectedLocation'>TRIP_ON</span>
                            </li>
                            <li>
                                <span class='entypo-mail'></span>
                                <a href='#'>trip_on@gmail.com</a>
                            </li>
                            <li>
                                <span class='entypo-phone'></span>
                                +49 17626888730
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div id='right'>
            <p>Connect</p>
            <div id='social'>
                <a class='social'>
                    <span class='entypo-facebook'></span>
                </a>
                <a class='social'>
                    <span class='entypo-twitter'></span>
                </a>
                <a class='social'>
                    <span class='entypo-linkedin'></span>
                </a>
                <a class='social'>
                    <span class='entypo-gplus'></span>
                </a>
                <a class='social'>
                    <span class='entypo-instagrem'></span>
                </a>
            </div>
            <form action="/contact" method="post">
                <p>Get in Contact</p>

                <input placeholder='Email' type='email' name="Email">
                <input placeholder='Subject' type='text' name="Subject">
                <textarea placeholder='Message' rows='4' name="Message"></textarea>
                <input placeholder='Send' type='submit'>

                <label> <%= Message %></label>
            </form>
            <p>other way</p>
            <p class='other entypo-mail'>
                <a href='#'>trip_on@gmail.com</a>
            </p>
            <p class='other entypo-phone'>+49 17626888730</p>
        </div>
    </div>
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

<script src="js/contact.js"></script>


</body>
</html>
<script>

    // This example displays a marker at the center of Australia.
    // When the user clicks the marker, an info window opens.

    function initMap() {
        var uluru = {lat: 54.33, lng: 10.18};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 12,
            center: uluru
        });

        var contentString = '<div id="contentinfo">'+
            '<div id="siteNotice">'+
            '</div>'+
            '<h1 id="firstHeading" class="firstHeading">TRIP_ON</h1>'+
            '<div id="bodyContent">'+
            '<p>trip_on@gmail.com</p>'+
            '<p>+49 17626888730</p>'+
            '<p>Will get back to u</p>'+
            '</div>'+
            '</div>';



        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position: uluru,
            map: map,
            title: 'Uluru (Ayers Rock)'
        });
        marker.addListener('click', function() {
            infowindow.open(map, marker);
        });
    }
</script>



<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDsA8_2zkB6oK0AY9PoVE5YoGxPQgwzpFc&callback=initMap">
</script>